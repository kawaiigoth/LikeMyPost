@using LikeMyPost.WebInterface;
@using ILikeMyPostBLL;
@using LikeMyPost.Entities;
@using ILikeMyPost.BLL;
@{
    Layout = "~/Layouts/_MainLayout.cshtml";
    Page.Title = "Лучшее";
    List<PostDTO> posts = Helper.GetBestPosts();
    var generated = Helper.PagesList(10, posts);
    var str_page_number = Request["page"];
    int page_number;
    if (string.IsNullOrWhiteSpace(str_page_number) || !int.TryParse(str_page_number, out page_number))
    {
        @RenderPage("~/Partials/_ListOfPosts.cshtml", new { Title = "Лучшее", posts = generated, page_number = 1, url = "best" })
    }
    else
    {
        @RenderPage("~/Partials/_ListOfPosts.cshtml", new { Title = "Лучшее", posts = generated, page_number = page_number, url = "best" })
    }
}



